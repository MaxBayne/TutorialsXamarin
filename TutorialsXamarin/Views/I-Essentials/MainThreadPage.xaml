<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutorialsXamarin.Views.MainThreadPage"
             Title="Main Thread">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="LblText" Text="Welcome to Xamarin.Forms!" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
            <Button Text="Start Timer" Clicked="BtnStartTimer_OnClicked"/>
            <Button Text="Stop Timer" Clicked="BtnStopTimer_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>