<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutorialsXamarin.Views.AbsoluteLayoutPage"
             Title="AbsoluteLayout">
    <ContentPage.Content>

        <AbsoluteLayout>

            <!--Define X Position , Y Position , Width , Height-->
            <BoxView   Color="Red"
                       AbsoluteLayout.LayoutBounds="50,300,100,100"
                       AbsoluteLayout.LayoutFlags="None"/>

            <!--Define X Position as Percent 0:1, Y Position  as Percent 0:1 debend on X ,Y Position , Width , Height-->
            <BoxView   Color="Green"
                       AbsoluteLayout.LayoutBounds="0.5,0.5,100,100" 
                       AbsoluteLayout.LayoutFlags="PositionProportional" />

            <BoxView   Color="Blue" 
                       AbsoluteLayout.LayoutBounds="0.5,0.8,.5,.2" 
                       AbsoluteLayout.LayoutFlags="All" />

        </AbsoluteLayout>

    </ContentPage.Content>
</ContentPage>