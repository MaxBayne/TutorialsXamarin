<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutorialsXamarin.Views.GridLayout1"
             Title="GridLayout">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="50" BackgroundColor="Orange" Grid.Row="0" Grid.Column="1" />
            <Label Text="Auto" BackgroundColor="Red" Grid.Row="1" />
            <Label Text="*" BackgroundColor="Green" Grid.Row="2" Grid.ColumnSpan="2"/>
            <Label Text="2*" BackgroundColor="Yellow" Grid.Row="3" />

        </Grid>
    </ContentPage.Content>
</ContentPage>