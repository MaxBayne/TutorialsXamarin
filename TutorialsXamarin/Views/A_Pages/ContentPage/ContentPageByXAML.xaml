<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutorialsXamarin.Views.ContentPageByXAML"
             Title="Content Page">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Chrome" IconImageSource="Chrome.png" Clicked="ToolbarItem_Clicked" />
        <ToolbarItem Text="iTunes" IconImageSource="iTunes.png" Clicked="ToolbarItem_Clicked" />
        <ToolbarItem Text="Twitter" IconImageSource="Twitter.png" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="This is Content Page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>